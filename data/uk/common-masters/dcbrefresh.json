apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: dcbrefresh
spec:
  schedule: "0/15 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: hello
            image: busybox
            args:
            - /bin/sh
            - -c
            - wget http://ukd-custom-service:8080/ukd-custom-service/v1/pt/dcb/_refresh
          restartPolicy: OnFailure
